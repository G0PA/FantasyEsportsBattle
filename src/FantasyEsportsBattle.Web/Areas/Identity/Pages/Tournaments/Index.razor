@page "/Identity/Tournaments"
@using FantasyEsportsBattle.Web.Data
@using FantasyEsportsBattle.Web.Areas.Identity.Pages.Tournaments

<style>
    .create-tournament {
        background: lightcoral !important;
    }
</style>

